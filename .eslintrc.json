{
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "sonarjs",
        "no-use-extend-native"
    ],
    "extends": [
        "react-app",
        "airbnb",
        "plugin:sonarjs/recommended"
    ],
    "rules": {
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "no-use-extend-native/no-use-extend-native": 2
    }
}
